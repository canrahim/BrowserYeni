<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Aktif sekme -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Ana arka plan -->
            <item>
                <shape android:shape="rectangle">
                    <corners 
                        android:topLeftRadius="8dp" 
                        android:topRightRadius="8dp" />
                    <solid android:color="@color/tabBackground" />
                </shape>
            </item>
            <!-- İnce kenarlık -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <corners 
                        android:topLeftRadius="8dp" 
                        android:topRightRadius="8dp" />
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/tabBorderActive" />
                </shape>
            </item>
            <!-- Alt çizgi vurgusu -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp">
                <shape>
                    <size android:height="2dp" />
                    <solid android:color="@color/tabBorderActive" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Aktif olmayan sekme -->
    <item>
        <layer-list>
            <!-- Ana arka plan -->
            <item>
                <shape android:shape="rectangle">
                    <corners 
                        android:topLeftRadius="8dp" 
                        android:topRightRadius="8dp" />
                    <solid android:color="@color/tabBackgroundInactive" />
                </shape>
            </item>
            <!-- İnce kenarlık -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <corners 
                        android:topLeftRadius="8dp" 
                        android:topRightRadius="8dp" />
                    <stroke 
                        android:width="0.5dp" 
                        android:color="@color/tabBorderInactive" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>