<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/tab_background"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/favicon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Site Favicon"
        app:layout_constraintBottom_toBottomOf="@+id/tabTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabTitle"
        tools:src="@drawable/ic_add" />

    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxWidth="140dp"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/favicon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Google Arama" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Sekmeyi Kapat"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/tabTitle"
        app:layout_constraintStart_toEndOf="@+id/tabTitle"
        app:layout_constraintTop_toTopOf="@+id/tabTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>